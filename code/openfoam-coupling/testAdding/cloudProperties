FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          sprayProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationSchemes
{
    U               cellPointFace;
}

g 		    (-9.81 0 0);

dragModel   SyamlalOBrien;
subCycles	1;
diffusionSteps 3;
// diffusionSteps 0;
diffusionBandWidth 0.002;
maxPossibleAlpha 0.8;

particleDrag            1;
particlePressureGrad    1;
particleAddedMass       0;
lubricationForce        0;
particleLift            0;
particleHistoryForce    0;
inletForce              (0 0 1);

UfSmooth    0;
UpSmooth    1;
dragSmooth  1;
alphaSmooth 1;

smoothDirection (3.0 0 0 0 3.0 0 0 0 3.0);

addParticle     2; // no/box/cylinder
deleteParticle  2;
deleteBeforeAdd 1;

addParticleBox (0 0 0 0 0.45 0.55 0.025 0.036 0); // x1x2y1y2z1z2r1r2;
clearInitialBox (0 0 0 0 0.45 0.515 0.024 0.037 0); // x1x2y1y2z1z2r1r2;
addParticleTimeStep 0.025;
addParticleInfo (0.002 2300 1); //diameter/rho/type
randomPerturb 0.0005;

deleteParticleBox (0 0 0 0 4.45 4.9 0.024 0.037 0); // x1x2y1y2z1z2r1r2;

inletBox (0 0 0 0 0.45 0.51 0.024 0.037 0); // x1x2y1y2z1z2r1r2;

